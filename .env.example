# PanelVerse Environment Variables
# Copy this file to .env.local and fill in your actual values

# ============================================
# Google Books API
# ============================================
# Get your API key from: https://console.cloud.google.com/
GOOGLE_BOOKS_API_KEY=your_google_books_api_key_here

# ============================================
# Authentication (NextAuth.js)
# ============================================
# Generate a random secret: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Google OAuth
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Twitter/X OAuth
# Get credentials from: https://developer.twitter.com/
TWITTER_CLIENT_ID=your_twitter_client_id_here
TWITTER_CLIENT_SECRET=your_twitter_client_secret_here

# ============================================
# Cloudflare (Production)
# ============================================
# D1 Database ID (from Cloudflare dashboard)
D1_DATABASE_ID=your_d1_database_id_here

# R2 Bucket name
R2_BUCKET_NAME=panelverse-covers

# ============================================
# Application
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=PanelVerse
